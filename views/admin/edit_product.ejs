      }
      Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
    }
  </script>
  <script>
      function viewImage(event) {
    const imageContainer = document.getElementById('imageContainer');
    imageContainer.innerHTML = ''; // Clear previous images

    for (let i = 0; i < event.target.files.length; i++) {
        const imageUrl = URL.createObjectURL(event.target.files[i]);
        const imagePreview = document.createElement('div');
        imagePreview.className = 'image-preview me-2 position-relative';
        imagePreview.innerHTML = `
            <img src="${imageUrl}" alt="image" class="w-75">
            <button type="button" class="btn btn-danger btn-sm delete-image position-absolute" onclick="deleteImage('<%= pro_get._id %>', '${i}')">x</button>
        `;
        imageContainer.appendChild(imagePreview);
    }
}
  
  </script>
  <script>
    
      async function deleteImage(productId,imageIndex){
        const response=await fetch(`/delete-image/${productId}/${imageIndex}`,{
          method:'DELETE'
        })
        if(response.ok){
          location.reload()
        }else{
          alert('Failed to delete the image')
        }
      }
    </script>

