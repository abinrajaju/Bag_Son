                          <img src="<%= image %>" alt="image" class="w-75" id="imgView<%= index %>">
                          <button type="submit" class="btn btn-danger btn-sm delete-image position-absolute" onclick="deleteImage('<%= pro_get._id %>', '<%= index %>')">x</button>
