    <% if (!user || user.items.length === 0) { %>
      <div class="container cart" >
          <div> <h1>  Your cart is empty.</h1></div>
         
      </div>
  <% } else { %>
    <!-- Cart Items -->
    <div class="container cart">
      <table>
        <tr>
          <th>Product</th>
          <th>Quantity</th>
          <th>Subtotal</th>
        </tr>
        <% user.items.forEach(item=>{%>
        <tr>
          
          <td>
            <div class="cart-info">       
              <img src="<%=item.productId.images[0] %>" alt="" />
              <div>
                
                <span> <%= item.productId.product_name %></span> <br />
                <a href="remove/<%=item.productId._id %>" >remove<i class="fa-solid fa-trash"></i></a>
              </div>
            </div>
          </td>
          <td><span class="input-group-btn">
            <button type="button" class="quantity-left-minus btn" onclick="quantity('dec',<%= JSON.stringify(item) %>)" id="decrese"  >
             <i class="icon-minus2"></i>
            </button>
          </span>
          <input type="button" id="quantity_<%= item._id %>" name="quantity" class="form-control input-number" value="<%= item.quantity %>" min="1" max="20" disabled>
         <span class="input-group-btn ml-1">
            <button type="button" class="quantity-right-plus btn" onclick="quantity('inc',<%= JSON.stringify(item) %>)" data-type="plus" >
               <i class="icon-plus2"></i>
           </button>
         </span></td>
          <td>&#8377;<%=item.productId.price%></td>
          
        </tr>
        <% }) %>
        </table>
        <div class="total-price">
          <table>
            <tr>
              <td>Subtotal</td>
              <td>&#8377;<%=user.totalAmount%></td>
            </tr>
            <tr>
              <td>Discount</td>
              <td>&#8377;<%=user.totalDiscount%></td>
            </tr>
            <tr>
              <td>Total</td>
              <td>&#8377;<%=user.balance%></td>
            </tr>
          </table>
          <a href="/checkout" class="checkout btn">Proceed To Checkout</a>
        </div>
      </div>
   
    <% } %>

