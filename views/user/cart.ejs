      </div>
    </div>
     
    <% if (!user || user.items.length === 0) { %>
      <div class="container cart" >
          <div> <h1>  Your cart is empty.</h1></div>
         
      </div>
  <% } else { %>
    <!-- Cart Items -->
    <div class="container cart">
      <table>
        <tr>
          <th>Product</th>
          <th>Quantity</th>
          <th>Subtotal</th>
        </tr>
        <% user.items.forEach((item,index)=>{%>
          <tr>
            <td>
              <div class="cart-info">       
                <img src="<%= item.productId.images[0] %>" alt="" />
                <div>
                  <span><%= item.productId.product_name %></span> <br />
                  <a href="remove/<%= item.productId._id %>">remove<i class="fa-solid fa-trash"></i></a>
                </div>
              </div>
            </td>
            <td>
              <% if(item.productId.stock>0){ %>
              <div class="quantity">
                <button class="quantity-btn btn2" onclick="quantity('dec',<%= JSON.stringify(item) %>)" id="decrese">-</button>
                <input type="number" id="quantity-<%= item.productId._id %>"  value="<%= item.quantity %>" min="1" readonly />
                <button class="quantity-btn" onclick="quantity('inc',<%= JSON.stringify(item) %>)" data-type="plus" >+</button>
              </div>
            </td>
         
            <td id="total_price_<%=item.productId.price %>">&#8377;<%= item.productId.price %></td>
            <%}else{ %>
              <td>out of Stock</td>
              <%}%>
          </tr>
          
        <% }) %>
        </table>
        <div class="total-price">
          <table>
            <tr>
              <td>total</td>
              <td>&#8377;<%=user.totalAmount%></td>
            </tr>
           
           
          </table>
          <a href="/checkout" class="checkout btn">Proceed To Checkout</a>
        </div>
      </div>
   
    <% } %>


    <!-- Footer -->
    <footer class="footer">
      <div class="row">
        <div class="col d-flex">
